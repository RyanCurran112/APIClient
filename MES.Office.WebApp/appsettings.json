{
  "Logging": {
    "SharedLogDirectory": "../MES.Logs",
    "RetainedFileCountLimit": 31,
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ApiSettings": {
    "BaseUrl": "https://localhost:7272",
    "Timeout": 30,
    "EnableAuthentication": true,
    "SeedingUserId": "SEEDING_SERVICE",
    "SeedingRoles": [ "SYSDEV" ]
  },
  "DataSeeding": {
    "GlobalSettings": {
      "TestDataPrefix": "TEST_",
      "UseTransactions": false,
      "MaxTestRecordsPerEntity": 20,
      "ValidateExistingData": true,
      "RequireTestIdentifier": true,
      "AllowProductionDataDeletion": false,
      "OperationTimeoutSeconds": 300,
      "EnvironmentSettings": {
        "EnableInDevelopment": true,
        "EnableInTest": true,
        "EnableInStaging": false,
        "EnableInProduction": false
      }
    },
    "Performance": {
      "EnableParallelProcessing": true,
      "MaxParallelism": 4,
      "BatchSize": 100,
      "EnableCaching": true,
      "CacheDurationMinutes": 5
    },
    "ApiTesting": {
      "EnableApiTesting": true,
      "TestCrudOperations": true,
      "TestSearchOperations": true,
      "TestValidationRules": true,
      "MaxAcceptableResponseTimeMs": 1000
    }
  },
  "MES": {
    "Application": {
      "Name": "MES Office WebApp",
      "Version": "1.0.0",
      "Description": "API Seeding and Testing Tool (API-Only Mode)"
    },
    "Features": {
      "EnableDetailedErrors": false
    }
  },
  "AllowedHosts": "*"
}
