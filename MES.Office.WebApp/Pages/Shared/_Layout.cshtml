<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MES Office WebApp</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="header">
        <h1>MES Office WebApp</h1>
    </header>

    <nav class="nav">
        <ul class="nav-list">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "active" : "")" href="/">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Seed") == true ? "active" : "")" href="/Seed">Data Seeding</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Seed/Configuration" ? "active" : "")" href="/Seed/Configuration">Configuration</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Test" ? "active" : "")" href="/Test">Testing</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Test/Endpoints" ? "active" : "")" href="/Test/Endpoints">Endpoints</a>
            </li>
        </ul>
    </nav>

    <main class="container">
        <div id="alert-container"></div>
        @RenderBody()
    </main>

    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
