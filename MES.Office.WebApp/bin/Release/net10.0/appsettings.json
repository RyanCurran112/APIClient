{
  "Logging": {
    "SharedLogDirectory": "../MES.Logs",
    "RetainedFileCountLimit": 31,
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "ApiSettings": {
    "BaseUrl": "https://localhost:7272",
    "Timeout": 30
  },
  "MES": {
    "Application": {
      "Name": "MES Office WebApp",
      "Version": "1.0.0",
      "Description": "API Seeding and Testing Tool"
    },
    "Features": {
      "EnableAuditing": true,
      "EnableDetailedErrors": false
    }
  },
  "AllowedHosts": "*"
}
